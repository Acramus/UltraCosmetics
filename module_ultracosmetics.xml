<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ultracosmetics" default="compile.module.ultracosmetics">
    <dirname property="module.ultracosmetics.basedir" file="${ant.file.module_ultracosmetics}"/>

    <property name="module.jdk.home.ultracosmetics" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.ultracosmetics" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.ultracosmetics" value="${project.jdk.classpath}"/>

    <property name="compiler.args.ultracosmetics" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>

    <property name="ultracosmetics.output.dir" value="${module.ultracosmetics.basedir}/out/production/UltraCosmetics"/>
    <property name="ultracosmetics.testoutput.dir" value="${module.ultracosmetics.basedir}/out/test/UltraCosmetics"/>

    <path id="ultracosmetics.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="ultracosmetics.module.production.classpath">
        <path refid="${module.jdk.classpath.ultracosmetics}"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Spigot_Builds/spigot-1.8.8.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Vault.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/spigot-1.8.8.jar"/>
        <pathelement
                location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/plugins/NoteBlockAPI-1.1.0-2.jar"/>
    </path>

    <path id="ultracosmetics.runtime.production.module.classpath">
        <pathelement location="${ultracosmetics.output.dir}"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Spigot_Builds/spigot-1.8.8.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Vault.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/spigot-1.8.8.jar"/>
        <pathelement
                location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/plugins/NoteBlockAPI-1.1.0-2.jar"/>
    </path>

    <path id="ultracosmetics.module.classpath">
        <path refid="${module.jdk.classpath.ultracosmetics}"/>
        <pathelement location="${ultracosmetics.output.dir}"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Spigot_Builds/spigot-1.8.8.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Vault.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/spigot-1.8.8.jar"/>
        <pathelement
                location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/plugins/NoteBlockAPI-1.1.0-2.jar"/>
    </path>

    <path id="ultracosmetics.runtime.module.classpath">
        <pathelement location="${ultracosmetics.testoutput.dir}"/>
        <pathelement location="${ultracosmetics.output.dir}"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Spigot_Builds/spigot-1.8.8.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/Vault.jar"/>
        <pathelement location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/spigot-1.8.8.jar"/>
        <pathelement
                location="${basedir}/../../../Users/Sacha/Desktop/SuperPaintball Server/plugins/NoteBlockAPI-1.1.0-2.jar"/>
    </path>


    <patternset id="excluded.from.module.ultracosmetics">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.ultracosmetics">
        <patternset refid="excluded.from.module.ultracosmetics"/>
    </patternset>

    <path id="ultracosmetics.module.sourcepath">
        <dirset dir="${module.ultracosmetics.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.ultracosmetics"
            depends="compile.module.ultracosmetics.production,compile.module.ultracosmetics.tests"
            description="Compile module UltraCosmetics"/>

    <target name="compile.module.ultracosmetics.production" depends="register.custom.compilers"
            description="Compile module UltraCosmetics; production classes">
        <mkdir dir="${ultracosmetics.output.dir}"/>
        <javac2 destdir="${ultracosmetics.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.ultracosmetics}/javac">
            <compilerarg line="${compiler.args.ultracosmetics}"/>
            <bootclasspath refid="ultracosmetics.module.bootclasspath"/>
            <classpath refid="ultracosmetics.module.production.classpath"/>
            <src refid="ultracosmetics.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.ultracosmetics"/>
        </javac2>

        <copy todir="${ultracosmetics.output.dir}">
            <fileset dir="${module.ultracosmetics.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.ultracosmetics.tests"
            depends="register.custom.compilers,compile.module.ultracosmetics.production"
            description="compile module UltraCosmetics; test classes" unless="skip.tests"/>

    <target name="clean.module.ultracosmetics" description="cleanup module">
        <delete dir="${ultracosmetics.output.dir}"/>
        <delete dir="${ultracosmetics.testoutput.dir}"/>
    </target>
</project>